@model OperationsViewModel

@{
    ViewData["Title"] = "Operations";
}

<h1>Operations for @Html.DisplayFor(model => model.SubscriptionName)</h1>

@if (Model.Operations.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Operations[0].TimeStamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Operations[0].Action)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Operations[0].Status)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Operations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeStamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Action)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}